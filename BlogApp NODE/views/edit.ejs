<%- include('partials/header') %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%=blog.title%></div>
    <form class="ui form" action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
        <div class="field">
            <label for="title">Title</label>
            <input type="text" name="blog[title]" value="<%=blog.title%>" id="title" placeholder="Title">
        </div>
        <div class="field">
            <label for="image">Image</label>
            <input type="text" value="<%=blog.image%>" name="blog[image]" id="image" placeholder="Image">
        </div>
        <div class="field">
            <label for="body">Blog Content</label>
            <textarea name="blog[body]" id="body" cols="30" rows="10" placeholder="Blog post goes here" required><%=blog.body%></textarea>
        </div>
        <input class="ui violet basic button big" type="submit" value="Submit">
    </form>
</div>

<%- include('partials/footer') %>

